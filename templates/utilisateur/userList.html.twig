{% extends 'base.html.twig' %}
{% block body %}
{% if list is not defined or list is empty %}
<div class="row align-items-center" style="height: 100dvh; width: 100vw;">
    <div>
        <h1 class="text-danger text-center">Aucun utilisateur disponible !</h1>
        <div class="text-center">
            <a class="btn btn-success" href="{{ path('user_register') }}">Ajouter</a>
        </div>
    </div>
</div>
{% else %}

<div class="container" style="width: 98vw;">
    <div class="row mt-5">
        <h1 class="text-center">Liste des utilisateurs</h1>
    </div>
    <div class="row mt-5">
        <div class="col text-end"><a class="btn btn-success" href="{{ path('user_register') }}">Ajouter</a></div>
    </div>
    <div class="row mt-2">
        <div class="col">
            <table border="1" class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom complet</th>
                        <th>Email</th>
                        <th>Actions</th>

                    </tr>
                </thead>
                <tbody>
                    {% for user in list %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.fullName }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a class="btn btn-danger" href="{{ path('user_remove', {id: user.id}) }}"
                                data-turbo="false">Delete</a>
                            <a class="btn btn-info" href="{{ path('user_update', {id: user.id}) }}"
                                data-turbo="false">Edit</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
</div>

{% endif %}
{% endblock %}